{
    "function": {
        "prefix": "pf",
        "body": ["public function $1($2) {", "  $0", "}"],
        "description": "Public Function"
    },
    "protected function": {
        "prefix": "prf",
        "body": ["protected function $1($2) {", "  $0", "}"],
        "description": "Protected Function"
    },
    "phpdoc": {
        "prefix": "/**",
        "body": ["/**", " * $0", " */"],
        "description": "PHPDoc",
        "luasnip": {
            "autotrigger": true
        }
    },

    "fixit": {
        "prefix": "//f",
        "body": ["// FIXIT: $0"],
        "description": "Fix it comment",
        "luasnip": {
            "autotrigger": true
        }
    }
}
