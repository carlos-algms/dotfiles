  "formatter": {
    "prettier": {
      "disabled": true,
    },
    "custom-prettier": {
      "command": ["prettier", "--write", "$FILE"],
      "environment": {},
      "extensions": [
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".mjs",
        ".mts",
        ".json",
        ".jsonc",
        ".css",
        ".scss",
        ".md",
        ".html",
        ".yaml",
        ".yml",
        ".svg",
      ],
    },
  },
