{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_AUTOUPDATER": "1",
    "IS_AI_TERMINAL": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read",
      "WebSearch",
      "WebFetch",
      "TodoWrite",
      "Bash(ls:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(realpath:*)",
      "Bash(which:*)",
      "Bash(git rev-parse:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Skill"
    ],
    "deny": [],
    "ask": []
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "alwaysThinkingEnabled": true
}
