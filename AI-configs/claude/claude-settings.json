{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_ZOXIDE": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read",
      "WebSearch",
      "WebFetch",
      "Bash(ls:*)",
      "Bash(fd:*)",
      "Bash(find:*)"
    ],
    "deny": [],
    "ask": []
  },
  "model": "sonnet[1m]",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "alwaysThinkingEnabled": false
}
